<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="entity"
            type="com.base.bolg_model.entity.MenuHomeLeftEntity"/>
    </data>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/comm_dimen_40"
            android:layout_height="@dimen/comm_dimen_40"
            android:layout_marginRight="@dimen/comm_dimen_10"
            android:scaleType="center"
            android:src="@mipmap/ic_logo"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/comm_dimen_40"
            android:textColor="?attr/dayNightTwoTextColor"
            android:padding="@dimen/comm_dimen_10"
            android:layout_gravity="center"
            android:lines="1"
            android:gravity="center"/>
    </LinearLayout>
</layout>